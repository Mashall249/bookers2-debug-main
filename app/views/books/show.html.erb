<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @books.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <% if @books.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorite_path(@books), method: :delete do %>
                ♥<%= @books.favorites.count %>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to book_favorite_path(@books), method: :post do %>
                ♥<%= @books.favorites.count %>
              <% end %>
            </td>
          <% end %>
          <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>

      <div>
        <table class='table'>
          <% @books.book_comments.each do |book_comment| %>
            <tr>
              <td>
                <%= link_to(book_comment.user) do %>
                  <p><%= image_tag book_comment.user.get_profile_image, size:"50x50" %></p>
                  <%= book_comment.user.name %>
                <% end %>
              </td>
              <td>
                <%= book_comment.comment %>
              </td>
              <td>
                <% if book_comment.user == current_user %>
                  <%= link_to "Delete", book_book_comment_path(book_comment.book, book_comment),method: :delete, class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>

      <div>
        <%= form_with model: [@books, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5' %>
          <%= f.submit "Post" %>
        <% end %>
      </div>

    </div>
  </div>
</div>